@model List<BulkyBookWeb.Models.Domain.Employee>

@{
}

<h1>Employees</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Salary</th>
            <th>DateOfBirth</th>
            <th>Department</th>
            <th>Edit|Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var employee in Model){
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Salary.ToString("#,##0.##")</td>
                <td>@employee.DateOfBirth.ToString("MM-dd-yyyy")</td>
                <td>@employee.Department</td>
                <td><a href="Employees/View/@employee.Id">
                        <i class="bi bi-calendar-event"></i>
                </a></td>
            </tr>
        }
    </tbody>
</table>
<div style="height:550px; position: relative;">
    <p style="position: absolute; bottom: 0; right: 0; font-size: 60px;">
        <a asp-controller="Employees" asp-action="Add"><i class="bi bi-plus-circle-fill text-primary"></i></a>
    </p>
</div>