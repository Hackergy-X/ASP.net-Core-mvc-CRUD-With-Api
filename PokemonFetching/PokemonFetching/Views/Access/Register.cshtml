@model PokemonFetching.Models.Registration;
<html>
<head>

    <link rel="stylesheet" href="~/css/style.css" />
</head>

<body>
    <div class="login">
        <h1>Register</h1>

        <form method="post" asp-controller="Access" asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p>
                <input type="text" name="UserName" asp-for="UserName" value="" placeholder="Username...">
                <span asp-validation-for="UserName" class="text-danger" style="color: red;"></span>
                </p>
            <p>
                <input type="text" name="Email" asp-for="Email" value="" placeholder="Email...">
                <span asp-validation-for="Email" class="text-danger" style="color: red;"></span>
            </p>
            <p>
                <input type="password" name="Password" asp-for="Password" value="" placeholder="Password...">
                <span asp-validation-for="Password" class="text-danger" style="color: red;"></span>
            </p>
            You have a account? <a style="margin-top: 10px; width: 100%; font-size: 12px;" asp-controller="Access" asp-action="Login" class="btn btn-sm btn-secondary">Back to login</a>
            <input style="margin-top: 20px; margin-bottom: 5px; width: 85%;" class="btnLogin" type="submit" name="commit" value="Register">
            <hr />
        </form>
    </div>
</body>
</html>

@{
    Layout = null;
}