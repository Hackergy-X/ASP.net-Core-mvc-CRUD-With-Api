@{
    ViewBag.Title = "Chart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <base href="https://demos.telerik.com/kendo-ui/charts/index">
    <style>html { font-size: 14px; font-family: Arial, Helvetica, sans-serif; }</style>
    <title></title>
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2023.1.117/styles/kendo.default-ocean-blue.min.css" />

    <script src="https://kendo.cdn.telerik.com/2023.1.117/js/jquery.min.js"></script>
    
    
    <script src="https://kendo.cdn.telerik.com/2023.1.117/js/kendo.all.min.js"></script>
    
    

</head>
<body>

    <div class="demo-section k-content wide">
        <div id="chart"></div>
    </div>

<script>

        function createChart() {
            $("#chart").kendoChart({
                title: {
                    position: "top",
                    text: "Contries Chart"
                },
                legend: {
                    visible: false
                },
                chartArea: {
                    background: ""
                },
                seriesDefaults: {
                    type: "donut",
                    startAngle: 150
                }
                ,
                series: [  //Series

                    /*     { data: [{"category":"01/17","value":983876.5300,"color":"#ffffff"},{"category":"01/18","value":1061674.8300,"color":"#ffffff"},{"category":"01/19","value":761625.0200,"color":"#ffffff"},{"category":"01/20","value":582714.7100,"color":"#ffffff"},{"category":"01/21","value":493689.8100,"color":"#ffffff"},{"category":"01/22","value":498667.8600,"color":"#ffffff"},{"category":"01/23","value":564254.0800,"color":"#ffffff"}], type: "donut", name: "Inner", labels: { visible: false, background: "transparent", position: "outsideEnd", template: "#= kendo.toString(value, 'c0') #"} , tooltip: { visible: true} } , */
                    { data: [{ "category": "01/17", "value": 983876.5300, "color": "#44619F" }, { "category": "01/18", "value": 1061674.8300, "color": "#5B75AC" }, { "category": "01/19", "value": 761625.0200, "color": "#728ABA" }, { "category": "01/20", "value": 582714.7100, "color": "#899FC8" }, { "category": "01/21", "value": 493689.8100, "color": "#A0B3D5" }, { "category": "01/22", "value": 498667.8600, "color": "#B7C8E3" }, { "category": "01/23", "value": 564254.0800, "color": "#CEDDF1" }], type: "donut", name: "Outer", labels: { visible: true, background: "transparent", position: "outsideEnd", template: "#= category #", distance: 10 }, tooltip: { visible: false } }
                ],
                /*,
                series: [{
                    name: "Level1",
                    data: [{
                        category: "Week1-Week4",
                        value: 33.3
                    },{
                        category: "Week5-Week8",
                        value: 15.8
                    },{
                        category: "Week9-Week12",
                        value: 50.9
                    }],
                    labels: {
                        visible: true,
                        background: "transparent",
                        position: "insideEnd",
                        template: "#= category #: \n #= value#%"
                    }
                }],*/
                tooltip: {
                    visible: true,
                    template: "#= category # (#= series.name #): #= value #%"
                }

            });
        }

        $(document).ready(createChart);
        $(document).bind("kendo:skinChange", createChart);
</script>


<style>
    .flex-container {
        display: flex;
        flex-wrap: wrap;
        margin: 40px 0 40px 0;
    }

    #funnel-chart {
        flex-grow: 1;
    }

    #donut-chart {
        flex-basis: 45%;
        margin: 0 20px 0 20px;
        background: center no-repeat url('../content/shared/styles/world-map.png');
        background-size: contain;
    }

    #bar-chart {
        flex-grow: 1;
    }

</style>




</body>
</html>
