@model Country
@{
    ViewBag.Title = "Get Country by Id";
}

<h2>Get Country by Id <a asp-action="Index" class="btn btn-sm btn-primary">Back</a></h2>
<h3>@ViewBag.StatusCode</h3>
<form method="post">
    <div class="form-group">
        <label for="id">Id:</label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body mt-3">
        <button type="submit" class="btn btn-sm btn-primary w-100">Get Country</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Pokemon</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.id</td>
                <td>@Model.name</td>          
            </tr>
        </tbody>
    </table>
}